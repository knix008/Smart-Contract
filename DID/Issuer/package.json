{
  "name": "did-issuer",
  "version": "1.0.0",
  "description": "Verifiable Credential Issuer Service for DID System",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "setup": "npm install && npm run check-env",
    "check-env": "node -e \"require('dotenv').config(); console.log('Environment check passed')\"",
    "health": "curl http://localhost:3002/health || echo 'Service not running'",
    "logs": "node src/index.js | tee logs/issuer.log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  }
}